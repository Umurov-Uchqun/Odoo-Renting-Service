<odoo>
    <data>
        <record id="rental_order_list" model="ir.ui.view">
            <field name="name">rental_order_list</field>
            <field name="model">rental.order</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="product_id"/>
                </list>
            </field>
        </record>

        <record id="rental_order_form" model="ir.ui.view">
            <field name="name">rental_order_form</field>
            <field name="model">rental.order</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name"/>
                            <h1>
                                <div class="d-flex">
                                    <field class="text-break" name="name" options="{'line_breaks': False}" widget="text"
                                           placeholder="e.g. S0003" readonly="1"/>
                                </div>
                            </h1>
                        </div>
                        <group>
                            <field name="product_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="task_kanban" model="ir.ui.view">
            <field name="name">task_kanban</field>
            <field name="model">rental.order</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>

                    <templates>
                        <t t-name="card">
                            <field name="name"/>
                            <field name="customer"/>
                            <field name="product"/>
                            <field name="human_readability"/>
                            <field name="total_price"/>
                            <field name="status"/>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="rental_order_action" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">rental.order</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="rental_order_menu" action="rental_order_action"/>
    </data>
</odoo>