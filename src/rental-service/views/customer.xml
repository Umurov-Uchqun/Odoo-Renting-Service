<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_customer_list" model="ir.ui.view">
        <field name="name">customer.list</field>
        <field name="model">service.customer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">customer.form</field>
        <field name="model">service.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">service.customer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="product_menu" action="product_action"/>
</odoo>