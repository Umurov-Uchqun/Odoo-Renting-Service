<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_list" model="ir.ui.view">
            <field name="name">product_list</field>
            <field name="model">rental.product</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="product_form" model="ir.ui.view">
            <field name="name">product_form</field>
            <field name="model">rental.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'convert_to_webp': True, 'preview_image': 'image_128'}"/>
                        <div class="oe_title">
                            <label for="name" string="Product"/>
                            <h1>
                                <div class="d-flex">
                                    <field class="text-break" name="name" options="{'line_breaks': False}" widget="text"
                                           placeholder="e.g. Car"/>
                                </div>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">rental.product</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="product_menu" action="product_action"/>
    </data>
</odoo>